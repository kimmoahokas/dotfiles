[core]
	excludesfile = /Users/kaho/.gitignore_global
	quotepath = false
	pager = diff-so-fancy | less --tabs=4 -RFX
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
#[credential]
#	helper = osxkeychain
[color]
	ui = auto
[alias]
# http://gggritso.com/human-git-aliases
	lol = log --graph --decorate --pretty=oneline --abbrev-commit --all --date-order
	ls-ignored = ls-files -o -i --exclude-standard
	branches = branch -a
	tags = tag
	stashes = stash list
	unstage = reset -q HEAD --
	discard = checkout --
	precommit = diff --cached --diff-algorithm=minimal -w
	uncommit = reset --mixed HEAD~
	amend = commit --amend
	nevermind = !git reset --hard HEAD && git clean -d -f
	clone-branches = "! git branch -a | sed -n \"/\\/HEAD /d; /\\/master$/d; /remotes/p;\" | xargs -L1 git checkout -t"
[push]
	default = current
[filter "media"]
	clean = git-media-clean %f
	smudge = git-media-smudge %f
[gitreview]
	username = kimmo-ahokas
[commit]
	template = /Users/kaho/.stCommitMsg
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	required = true
	process = git-lfs filter-process
[interactive]
	diffFilter = diff-highlight
